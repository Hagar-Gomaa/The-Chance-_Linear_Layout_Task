<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:background="@drawable/corner_linear_background"
android:layout_weight="3"
    android:orientation="horizontal"
    android:layout_margin="@dimen/dimens_16"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_margin="@dimen/dimens_12"
        android:src="@drawable/person"
        app:shapeAppearanceOverlay="@style/imageCorner"/>
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dimens_12"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Ahmed hassan"
            android:textColor="@color/black"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans"
            android:textColor="@color/blacklight"

            android:text="Engineer"
            android:textSize="12sp"
            android:layout_marginTop="@dimen/dimens_8"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_8"
            android:layout_gravity="start">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/icon_location"
                android:tint="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans"
                android:layout_marginStart="@dimen/dimens_2"
                android:text="UK"
                android:textColor="@color/blacklightest"
                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_8"
            android:layout_gravity="start">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans_bold"
                android:text="(150 Reviews)"
                android:textColor="@color/black"
                android:textSize="13sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans"
                android:layout_marginStart="@dimen/dimens_8"
                android:text="4.5"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="@dimen/dimens_8"
                android:src="@drawable/icon_star"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimens_2"
        android:layout_marginTop="@dimen/dimens_12"
        android:paddingEnd="8dp"
      android:layout_weight="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans"
            android:text="3 hr"
            android:paddingHorizontal="@dimen/dimens_8"
            android:paddingVertical="@dimen/dimens_2"
            android:layout_gravity="end"
            android:gravity="center"
            android:background="@drawable/cornercircle"
            android:textColor="@color/white"
            android:textSize="12sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans"
            android:layout_marginTop="@dimen/dimens_8"
            android:textColor="@color/blacklight"
            android:text="Russian"
            android:textSize="12sp"
            android:layout_gravity="end"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans"
            android:textColor="@color/blacklightest"
            android:layout_marginTop="@dimen/dimens_8"
            android:text="5 Days ago"
            android:textSize="12sp"
            android:layout_gravity="end"
            />

    </LinearLayout>

</LinearLayout>
